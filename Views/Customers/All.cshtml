@model List<Vanharmelen_FinalProject.Models.Customer>
@{
    ViewBag.Title = "All";
}

<h2>All Customers</h2>

<a href="/Customers/Upsert">Add New</a>

<div class="row">
    <div class="col-md-6">
        <input id="txtSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-info" value="Search" onclick="Sortable.Search()" />
    </div>
</div>

<table id="tblCustomers" class="sortable table table-hover">
    <thead>
        <tr>
            <th onclick="Sortable.Sort(0);">Customer Id</th>
            <th onclick="Sortable.Sort(1);">Customer Name</th>
            <th onclick="Sortable.Sort(2);">Customer Address</th>
            <th onclick="Sortable.Sort(3);">Customer City</th>
            <th onclick="Sortable.Sort(4);">Customer State</th>
            <th onclick="Sortable.Sort(5);">Customer ZipCode</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>@customer.CustomerID</td>
            <td>@customer.Name</td>
            <td>@customer.Address</td>
            <td>@customer.City</td>
            <td>@customer.State</td>
            <td>@customer.ZipCode</td>
            <td>
                <a href="/Customers/Upsert">Edit</a>
                <a href="/Customers/Upsert">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<script>
    Sortable.baseUrl = '/Customers/All';
</script>